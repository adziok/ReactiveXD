{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",                   
    "lib": ["es6"],                          
    "allowJs": false,
    "outDir": "build", 
    "rootDir": "src", 
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,           
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true,  

    "resolveJsonModule": true, 
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/"],
  "exclude": ["node_modules", "build"]
}